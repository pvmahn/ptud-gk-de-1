<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Trang Đăng Ký</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link href="/css/registerStyle.css" rel="stylesheet" />
  </head>
  <body>
    <div class="container">
      <div class="registration-container">
        <h2 class="form-title">Đăng ký</h2>
        <form>
          <div class="mb-3">
            <label for="firstName" class="form-label">Username</label>
            <input type="text" class="form-control" id="firstName" required />
          </div>

          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input
              type="email"
              class="form-control"
              id="email"
              placeholder="example@domain.com"
              required
            />
          </div>

          <div class="mb-3">
            <label for="password" class="form-label">Mật khẩu</label>
            <input
              type="password"
              class="form-control"
              id="password"
              required
            />
          </div>

          <div class="mb-3">
            <label for="confirmPassword" class="form-label">Xác nhận mật khẩu</label>
            <input
              type="password"
              class="form-control"
              id="confirmPassword"
              required
            />
          </div>

          <div class="mb-3">
            <label for="role" class="form-label">Vai trò</label>
            <select class="form-select" id="role" required>
              <option value="viewer">Viewer (Chỉ xem)</option>
              <option value="collaborator">Collaborator (Xem và chỉnh sửa)</option>
              <option value="editor">Editor (Xem, chỉnh sửa và xóa)</option>
            </select>
          </div>

          <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary">Đăng ký</button>
          </div>

          <div class="mt-3 text-center">
            <p>Đã có tài khoản? <a href="/auth/login">Đăng nhập</a></p>
          </div>
        </form>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"
    ></script>
    <script src="/js/handleCreateAccount.js"></script>
  </body>
</html>